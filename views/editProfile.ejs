<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Edit Profile</title>
  </head>

  <body class="bg-gray-100">
    <%- include('./partials/nav') %>

    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-blue-900 to-indigo-600 p-6">
          <div class="flex items-center">
            <div class="relative">
              <img
                src="<%= user?.profileImage %>"
                alt="<%= user?.fullname %>"
                class="w-24 h-24 rounded-full border-4 border-white object-cover"
              />
              <label for="profileImage" class="absolute bottom-0 right-0 bg-white p-2 rounded-full shadow-lg cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </label>
            </div>
            <div class="ml-6 text-white">
              <h1 class="text-2xl font-bold">Edit Profile</h1>
            </div>
          </div>
        </div>

        <!-- Edit Form -->
        <div class="p-6">
          <form action="/user/profile/update" method="POST" enctype="multipart/form-data">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Personal Information -->
              <div class="space-y-4">
                <div class="border-b pb-4">
                  <h2 class="text-lg font-semibold text-gray-700 mb-4">Personal Information</h2>
                  
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-700">Full Name</label>
                      <input type="text" name="fullname" value="<%= user?.fullname %>" 
                        class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                      />
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700">Email</label>
                      <input type="email" name="email" value="<%= user?.email %>" 
                        class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                      />
                    </div>

                    <div class="hidden">
                      <input type="file" id="profileImage" name="profileImage" accept="image/*"/>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Additional Information -->
              <div class="space-y-4">
                <div class="border-b pb-4">
                  <h2 class="text-lg font-semibold text-gray-700 mb-4">Additional Information</h2>
                  
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-700">Bio</label>
                      <textarea name="bio" rows="4" 
                        class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                      ><%= user?.bio %></textarea>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex space-x-4">
              <button type="submit" 
                class="px-4 py-2 bg-blue-900 text-white rounded hover:bg-blue-700 transition">
                Save Changes
              </button>
              <a href="/user/profile" 
                class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
