<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>User: Profile</title>
  </head>

  <body class="bg-gray-100">
    <%- include('./partials/nav') %>

    <div class="container mx-auto px-4 py-8">
      <div
        class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden"
      >
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-blue-900 to-indigo-600 p-6">
          <div class="flex items-center">
            <img
              src="<%= user?.profileImage %>"
              alt="<%= user?.fullname %>"
              class="w-24 h-24 rounded-full border-4 border-white object-cover"
            />
            <div class="ml-6 text-white">
              <h1 class="text-2xl font-bold"><%= user?.fullname %></h1>
              <p class="text-blue-100"><%= user?.role %></p>
            </div>
          </div>
        </div>

        <!-- Profile Details -->
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- User Information -->
            <div class="space-y-4">
              <div class="border-b pb-4">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">
                  Account Information
                </h2>
                <div class="space-y-2">
                  <p class="text-gray-600">
                    <span class="font-medium">Email:</span>
                    <%= user?.email %>
                  </p>
                </div>
              </div>
            </div>

            <!-- Additional Stats/Info -->
            <div class="space-y-4">
              <div class="border-b pb-4">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">
                  Account Status
                </h2>
                <div class="space-y-2">
                  <p class="text-gray-600">
                    <span class="font-medium">Bio:</span>
                    <%= user?.bio %>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-6 flex space-x-4">
            <a href="/user/profile/edit">
              <button
                class="px-4 py-2 bg-blue-900 text-white rounded hover:bg-blue-700 transition"
              >
                Edit Profile
              </button>
            </a>
            <!-- <button
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition"
            >
              Change Password
            </button> -->
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
